  <script>
    function sendServiceRequest() {
      var form = document.getElementById('serviceForm');
      var fields = [
        ['Name', form.name.value],
        ['Company', form.company.value],
        ['Email', form.email.value],
        ['Phone', form.phone.value],
        ['Project type', form.type.value],
        ['Budget', form.budget.value],
        ['Timeline', form.timeline.value],
        ['Environment', form.environment.value],
        ['Model preference', form.model.value],
        ['Preferred contact', form.contact.value],
        ['Details', form.details.value]
      ];

      var body = fields.map(function(item) {
        return item[0] + ': ' + (item[1] || '-');
      }).join('\\n');

      var subject = 'Service Request - ' + (form.type.value || 'Custom Project');
      var mailto = 'mailto:cmforgedbyfire@protonmail.com'
        + '?subject=' + encodeURIComponent(subject)
        + '&body=' + encodeURIComponent(body);

      window.location.href = mailto;
    }
  </script>
